{
  "name": "resilient-certificate-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "contracts": "cd contracts && npx hardhat node",
